<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".drawer.admin.nav_make_admin">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20px"
        android:paddingVertical="35px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20px"
            android:paddingVertical="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nav_firstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80px"
                    android:text="Create a New Admin"
                    android:textAlignment="center"
                    android:textColor="#303F9F"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:text="Personal Info"
                android:textColor="#1D0092"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailText"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:drawableLeft="@drawable/mail"

                android:drawablePadding="10px"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:drawableLeft="@drawable/person"

                android:drawablePadding="10px"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:drawableLeft="@drawable/person"

                android:drawablePadding="10px"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:text="Gender"
                android:textColor="#1D0092"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="360dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:text="Country"
                android:textColor="#1D0092"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="360dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:text="City"
                android:textColor="#1D0092"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/citySpinner"
                android:layout_width="360dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:text="Contact"
                android:textColor="#1D0092"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/zipCode"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="zip"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Phone"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:text="Security"
                android:textColor="#1D0092"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/passwordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:drawableLeft="@android:drawable/ic_lock_lock"
                    android:drawableTint="#000000"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/confirmPassowrdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:drawableLeft="@android:drawable/ic_lock_lock"
                    android:drawableTint="#000000"
                    android:ems="10"
                    android:hint="Confrim Password"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Must contain at least 5 characters" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Must contain a character, a number and a spacial character" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="103dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="300dp"
                    android:background="@drawable/mybutton"
                    android:text="Create Admin"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <TextView
                android:id="@+id/errorsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C74444"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>